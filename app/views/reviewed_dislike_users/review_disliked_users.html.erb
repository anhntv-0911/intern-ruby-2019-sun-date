<% content_for :body_class, "page-container-bg-solid" %>

<div class="page-container">
  <div class="page-content-wrapper">
    <div class="page-head">
      <div class="container">
        <div class="page-title">
          <h1><%= t "review_dislike.title" %></h1>
        </div>
      </div>
    </div>
    <div class="page-content margin-bottom-25">
      <div class="page-content-inner">
        <div class="profile-sidebar">
          <div class="portlet light profile-sidebar-portlet">
            <div class="profile-userpic">
              <img src="../assets/pages/media/profile/profile_user.jpg" class="img-responsive" alt=""/>
            </div>
            <div class="profile-usertitle">
              <div class="profile-usertitle-name"><%= current_user.name %></div>
              <div class="profile-usertitle-job"><%= current_user.company %></div>
            </div>
            <div class="profile-userbuttons">
              <div class="btn-group btn-group btn-group-justified">
                <%= link_to t("review_dislike.button.like"), root_path, class:"btn btn-success" %>
                <%= link_to t("review_dislike.button.unlike"), root_path, class:"btn red" %>
              </div>
            </div>
          </div>
        </div>
        <div class="app-ticket app-ticket-list">
          <div class="row">
            <div class="col-md-12">
              <div class="portlet light ">
                <div class="portlet-title tabbable-line">
                  <div class="caption caption-md">
                    <i class="icon-globe theme-font hide"></i>
                    <span class="caption-subject font-blue-madison bold uppercase"><%= t "review_like.header.user_profile" %></span>
                  </div>
                </div>
                <div class="portlet-body">
                  <div class="dataTables_wrapper no-footer">
                    <div class="note note-info note-bordered">
                      <%= t "review_like.header.general_information" %>
                    </div>
                    <div class="information">
                      <span class="bold">
                        <%= t "review_dislike.sub_header.name" %>
                      </span>
                      <span class="information-item">
                        <%= current_user.name %>
                      </span>
                    </div>
                    <div class="information">
                      <span class="bold">
                        <%= t "review_dislike.sub_header.address" %>
                      </span>
                      <span class="information-item">
                        <% current_user.address %>
                      </span>
                    </div>
                    <div class="information">
                      <span class="bold">
                        <%= t "review_dislike.sub_header.birthday" %>
                      </span>
                      <span class="information-item">
                        <%= current_user.birthday %>
                      </span>
                    </div>

                    <div class="note note-info note-bordered">
                      <%= t "review_like.header.description" %>
                    </div>
                    <div class="information">
                    </div>

                    <div class="note note-info note-bordered">
                      <%= t "review_like.header.image" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
