<div class="page-header">
  <div class="page-header-top">
    <div class="container">
      <div class="page-logo">
        <%= link_to "", href:"#", id:"logo" do %>
          <%= image_tag "logo_perfect.png" %>
        <% end %>
      </div>
      <div class="top-menu">
        <ul class="nav navbar-nav pull-right">
          <% unless signed_in? %>
            <%= link_to sign_in_path do %>
              <button type="button" class="btn green uppercase">
                <%= t "login.title" %>
              </button>
            <% end %>
          <% else %>
            <%= link_to "", href:"#", class:"menu-toggler" %>
            <li class="dropdown dropdown-extended dropdown-notification dropdown-dark" id="header_notification_bar">
              <%= link_to "", href:"#", class:"dropdown-toggle", data: {toggle: "dropdown", hover: "dropdown", "close-others": "true"} do %>
                <i class="fa fa-bell-o"></i>
                <span class="badge badge-default" ><%= t "header.notifications.badge-default" %></span>
              <% end %>
              <ul class="dropdown-menu">
                <li class="external">
                  <h3><%= t "header.external.you_have" %> <strong><%= t "header.external.strong" %></strong> <%= t "header.external.notifications" %></h3>
                  <%= link_to t "header.external.view_all", href:"#" %>
                </li>
                <li>
                  <ul class="dropdown-menu-list scroller" data-handle-color="#637283">
                    <li>
                      <%= link_to "", href:"#" do %>
                        <span class="time"><%= t "header.notifications.just_now" %></span>
                          <span class="details">
                          <span class="label label-sm label-icon label-success">
                            <i class="fa fa-plus" ></i>
                            </span><%= t "header.notifications.new_user_registered" %>
                        </span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to "", href:"#" do %>
                        <span class="time"><%= t "header.notifications.3_mins" %></span>
                        <span class="details">
                          <span class="label label-sm label-icon label-danger">
                            <i class="fa fa-bolt"></i>
                          </span> <%= t "header.notifications.server_12" %>
                        </span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to "", href:"#" do %>
                        <span class="time"><%= t "header.notifications.10_mins" %></span>
                        <span class="details">
                          <span class="label label-sm label-icon label-warning">
                            <i class="fa fa-bell-o"></i>
                          </span> <%= t "header.notifications.server_2" %>
                        </span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to "", href:"#" do %>
                        <span class="time"><%= t "header.notifications.14_hrs" %></span>
                        <span class="details">
                          <span class="label label-sm label-icon label-info">
                          <i class="fa fa-bullhorn"></i>
                          </span> <%= t "header.notifications.application_error" %>
                        </span>
                      <% end %>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>
            <li class="dropdown dropdown-extended dropdown-tasks dropdown-dark" id="header_task_bar">
              <%= link_to "", href:"#", class:"dropdown-toggle", data: {toggle: "dropdown", hover: "dropdown", "close-others": "true"} do %>
                <i class="fa fa-calendar"></i>
                <span class="badge badge-default"><%= t "header.notifications.badge-default" %></span>
              <% end %>
                <ul class="dropdown-menu extended tasks">
                  <li class="external">
                    <h3><%= t "header.external.you_have" %> <strong><%= t "header.external.strong" %></strong> <%= t "header.external.notifications" %></h3>
                    <%= link_to t "header.external.view_all", href:"#" %>
                  </li>
                  <li>
                    <ul class="dropdown-menu-list scroller" data-handle-color="#637283">
                      <li>
                        <%= link_to t "header.external.view_all", href:"#" do %>
                          <span class="task">
                            <span class="desc"><%= t "header.notifications.badge-default" %></span>
                            <span class="percent"><%= t "header.notifications.percent-default" %></span>
                          </span>
                          <span class="progress">
                            <span id="progress-home" class="progress-bar progress-bar-success" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">
                            <span class="sr-only"><%= t "header.notifications.percent-compelete" %></span>
                          </span>
                          </span>
                        <% end %>
                      </li>
                    </ul>
                  </li>
                </ul>
            </li>
            <li class="droddown dropdown-separator">
              <span class="separator"></span>
            </li>
            <li class="dropdown dropdown-extended dropdown-inbox dropdown-dark" id="header_inbox_bar">
              <%= link_to "", href:"#", class:"dropdown-toggle", data: {toggle: "dropdown", hover: "dropdown", "close-others": "true"} do %>
                <span class="circle">3</span>
                <span class="corner"></span>
              <% end %>
              <ul class="dropdown-menu">
                <li class="external">
                  <h3><%= t "header.message.you_have" %> <strong><%= t "header.message.strong" %></strong> <%= t "header.message.message" %></h3>
                  <%= link_to t "header.message.view_all", href:"#" %>
                </li>
                <li>
                  <ul class="dropdown-menu-list scroller" data-handle-color="#637283">
                    <li>
                      <%= link_to "", href:"#" do %>
                        <span class="photo">
                            <img src="../assets/layouts/layout3/img/avatar2.jpg" class="img-circle" alt=""/>
                        </span>
                        <span class="subject">
                          <span class="from"> <%= t "header.message.from" %> </span>
                          <span class="time"><%= t "header.message.time" %> </span>
                        </span>
                        <span class="message">
                          <%= t "header.message.message_content" %>
                        </span>
                      <% end %>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>
            <li class="dropdown dropdown-user dropdown-dark">
              <%= link_to "", href:"#", class:"dropdown-toggle", data: {toggle: "dropdown", hover: "dropdown", "close-others": "true"} do %>
                <% if current_user.avatar.present? %>
                  <%= image_tag current_user.avatar.url, class: "img-circle" %>
                <% elsif current_user.image_sc.present? %>
                  <%= image_tag current_user.image_sc, class: "img-circle" %>
                <% end %>
                <span class="username username-hide-mobile"><%= current_user[:name] %></span>
              <% end %>
                <ul class="dropdown-menu dropdown-menu-default">
                  <li>
                    <%= link_to new_dating_information_path do %>
                    <i class="fa fa-user-o"></i> <%= t "header.menu.profile" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "", href:"#" do %>
                      <i class="fa fa-envelope-open-o"></i> <%= t "header.menu.inbox" %>
                      <span class="badge badge-danger"> <%= t "header.notifications.badge-default" %> </span>
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                      <i class="fa fa-key"></i> <%= t "header.menu.log-out" %>
                    <% end %>
                  </li>
                </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="page-header-menu">
    <div class="container">
      <form class="search-form" action="page_general_search.html" method="GET">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="query" />
          <span class="input-group-btn">
            <%= link_to "", class:"btn submit" do%>
              <i class="icon-magnifier"></i>
            <% end %>
          </span>
        </div>
      </form>
      <div class="hor-menu ">
        <ul class="nav navbar-nav">
          <li class="active">
            <%= link_to t("header.sub-menu.suggestion"), suggest_users_path %>
          </li>
          <li>
            <%= link_to t "header.sub-menu.match", herf:"#" %>
          </li>
          <li class="menu-dropdown mega-menu-dropdown ">
            <%= link_to t("header.sub-menu.review") %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
