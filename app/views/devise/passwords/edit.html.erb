<% content_for :body_class, "login" %>
<div class="logo">
  <%= link_to root_path do %>
    <%= image_tag "logo_perfect.png" %>
  <% end %>
</div>
<div class="content">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "forget-form" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <h3 class="font-green">
      <%= t "change_pass.title" %>
    </h3>

    <p>
      <%= t "change_pass.hint" %>
    </p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: t("signup.password"), class: "form-control placeholder-no-fix" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("signup.password_confirm"), class: "form-control placeholder-no-fix" %>
    </div>

    <div class="form-actions">
      <%= f.submit t("button.submit"), class: "btn btn-success uppercase pull-right" %>
    </div>
  <% end %>
</div>
<div class="copyright">
  <%= Settings.dev_team %>
</div>
