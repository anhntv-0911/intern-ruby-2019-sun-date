<% content_for :body_class, "login" %>
<!-- BEGIN LOGO -->
<div class="logo">
  <%= link_to root_path do %>
    <%= image_tag "logo_perfect.png" %>
  <% end %>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
  <!-- BEGIN LOGIN FORM -->
  <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"} do |f| %>
    <h3 class="form-title font-green">
      <%= t "login.title" %>
    </h3>

    <% flash.each do |message_type, message| %>
      <% if message_type == "alert" %>
        <div class="alert-danger <%= message_type %>"><%= message %></div>
      <% else %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    <% end %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("login.label.username"), class: "form-control form-control-solid placeholder-no-fix" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: t("login.label.password"), class: "form-control form-control-solid placeholder-no-fix" %>
    </div>

    <div class="form-actions">
      <%= f.submit t("login.title"), class: "btn btn-sm green uppercase" %>
      <% if devise_mapping.rememberable? %>
        <label class="rememberme check mt-checkbox mt-checkbox-outline">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <span></span>
        </label>
      <% end %>
      <a id="forget-password" class="forget-password">
        <%= t "login.label.forgot_pass" %>
      </a>
    </div>

    <div class="login-options">
      <h4>
        <%= t "login.label.login_with" %>
      </h4>
      <ul class="list-unstyled list-inline pull-right">
        <li>
          <%= link_to user_facebook_omniauth_authorize_path, class: "socicon-btn socicon-btn-circle socicon-sm socicon-solid bg-blue bg-hover-grey-salsa font-white bg-hover-white tooltips",
                      data: {"original-title": "Facebook"} do %>
            <i class="fa fa-facebook"></i>
          <% end %>
        </li>
        <li>
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: "socicon-btn socicon-btn-circle socicon-sm socicon-solid bg-red bg-hover-grey-salsa font-white bg-hover-white tooltips",
                      "data-original-title" => "Google" do  %>
            <i class="fa fa-google-plus" aria-hidden="true"></i>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="create-account">
      <p>
        <a id="register-btn" class="uppercase">
          <%= t "login.label.create_acc" %>
        </a>
      </p>
    </div>
  <% end %>
  <!-- END LOGIN FORM -->
  <!-- BEGIN FORGOT PASSWORD FORM -->
  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forget-form" } do |f| %>
    <h3 class="font-green">
      <%= t "reset_pass.title" %>
    </h3>
    <p>
      <%= t "reset_pass.hint" %>
    </p>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control placeholder-no-fix", placeholder: t("reset_pass.email") %>
    </div>

    <div class="form-actions">
      <button type="button" id="back-btn" class="btn green btn-outline">
        <%= t "button.back" %>
      </button>
      <%= f.submit t("button.submit"), class: "btn btn-success uppercase pull-right" %>
    </div>
  <% end %>
  <!-- END FORGOT PASSWORD FORM -->
  <!-- BEGIN REGISTRATION FORM -->
  <form class="register-form" action="index.html" method="post">
    <h3 class="font-green">
      <%= t "signup.title" %>
    </h3>
    <p class="hint">
      <%= t "signup.enter_per_info" %>
    </p>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.name" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.name" %>" name="name"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.gender" %>
      </label>
      <select name="gender" class="form-control">
        <option value=""><%= t "signup.male" %></option>
        <option value="AF"><%= t "signup.female" %></option>
      </select>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.gender" %>
      </label>
      <div
        class="input-group date date-picker"
        data-date="12-02-2012"
        data-date-format="dd-mm-yyyy"
        data-date-viewmode="years"
        value="<%= t "signup.birthday" %>"
      >
        <input type="text" class="form-control" readonly=""/>
        <span class="input-group-btn">
          <button class="btn default btn-default--high" type="button">
            <i class="fa fa-calendar"></i>
          </button>
        </span>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.address" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.address" %>" name="address"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.company" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.company" %>" name="company"/>
    </div>
    <p class="hint">
      <%= t "signup.enter_acc_info" %>
    </p>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.email" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.email" %>" name="email"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.password" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.password" %>" name="password"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.password_confirm" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.password_confirm" %>"/>
    </div>
    <div class="form-actions">
      <button
        type="button"
        id="register-back-btn"
        class="btn green btn-outline"
      >
        <%= t "button.back" %>
      </button>
      <button
        type="submit"
        id="register-submit-btn"
        class="btn btn-success uppercase pull-right"
      >
        <%= t "button.submit" %>
      </button>
    </div>
  </form>
  <!-- END REGISTRATION FORM -->
</div>
<div class="copyright">
  <%= Settings.dev_team %>
</div>
