<% content_for :body_class, "login" %>
<div class="logo">
  <%= link_to root_path do %>
    <%= image_tag "logo_perfect.png" %>
  <% end %>
</div>
<div class="content">
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {method: :post, class: "register-form"} do |f| %>
    <h3 class="font-green">
      <%= t "signup.title" %>
    </h3>
    <p class="hint">
      <%= t "signup.enter_per_info" %>
    </p>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: t("login.label.name"), class: "form-control form-control-solid placeholder-no-fix" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("login.label.username"), class: "form-control form-control-solid placeholder-no-fix" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: t("login.label.password"), class: "form-control form-control-solid placeholder-no-fix" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("login.label.password_confirm"), class: "form-control form-control-solid placeholder-no-fix" %>
    </div>
    <div class="form-actions">
      <button
        type="submit"
        id="register-submit-btn"
        class="btn btn-success uppercase pull-right"
      >
        <%= t "button.submit" %>
      </button>
    </div>
  <% end %>
</div>
<div class="copyright">
  <%= Settings.dev_team %>
</div>
