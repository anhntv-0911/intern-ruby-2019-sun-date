<% content_for :body_class, "login" %>
<div class="logo">
  <%= link_to root_path do %>
    <%= image_tag "logo_perfect.png" %>
  <% end %>
</div>
<div class="content">
  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forget-form" } do |f| %>
    <h3 class="font-green">
      <%= t "reset_pass.title" %>
    </h3>

    <%= render "devise/shared/error_messages", resource: resource %>

    <p>
      <%= t "reset_pass.hint" %>
    </p>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control placeholder-no-fix", placeholder: t("reset_pass.email") %>
    </div>

    <div class="form-actions">
      <%= f.submit t("button.submit"), class: "btn btn-success uppercase pull-right" %>
    </div>
  <% end %>
</div>
<div class="copyright">
  <%= Settings.dev_team %>
</div>
