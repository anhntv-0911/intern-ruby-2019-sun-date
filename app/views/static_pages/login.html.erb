<% content_for :body_class, "login" %>
<!-- BEGIN LOGO -->
<div class="logo">
  <a href="index.html">
    <%= image_tag "logo_perfect.png" %>
  </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
  <!-- BEGIN LOGIN FORM -->
  <form class="login-form" action="index.html" method="post">
    <h3 class="form-title font-green">
      <%= t "login.title" %>
    </h3>
    <div class="alert alert-danger display-hide">
      <button class="close" data-close="alert"></button>
      <span> <%= t "login.flash.enter_user_pass" %> </span>
    </div>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "login.label.username" %>
      </label>
      <input class="form-control form-control-solid placeholder-no-fix"
             type="text" autocomplete="off" placeholder="<%= t "login.label.username" %>" name="username"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "login.label.password" %>
      </label>
      <input class="form-control form-control-solid placeholder-no-fix"
             type="password" autocomplete="off" placeholder="<%= t "login.label.password" %>" name="password"/>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn green uppercase">
        <%= t "login.title" %>
      </button>
      <label class="rememberme check mt-checkbox mt-checkbox-outline">
        <input type="checkbox" name="remember" value="1"/>
        <%= t "login.label.remember" %>
        <span></span>
      </label>
      <a id="forget-password" class="forget-password">
        <%= t "login.label.forgot_pass" %>
      </a>
    </div>
    <div class="login-options">
      <h4>
        <%= t "login.label.login_with" %>
      </h4>
      <ul class="list-unstyled list-inline pull-right">
        <li>
          <a
            href="#"
            class="socicon-btn socicon-btn-circle socicon-sm socicon-solid bg-blue bg-hover-grey-salsa font-white bg-hover-white tooltips"
            data-original-title="Facebook"
          >
            <i class="fa fa-facebook"></i>
          </a>
        </li>
        <li>
          <a
            href="#"
            class="socicon-btn socicon-btn-circle socicon-sm socicon-solid bg-red bg-hover-grey-salsa font-white bg-hover-white tooltips"
            data-original-title="Google"
          >
            <i class="fa fa-google-plus"></i>
          </a>
        </li>
      </ul>
    </div>
    <div class="create-account">
      <p>
        <a id="register-btn" class="uppercase">
          <%= t "login.label.create_acc" %>
        </a>
      </p>
    </div>
  </form>
  <!-- END LOGIN FORM -->
  <!-- BEGIN FORGOT PASSWORD FORM -->
  <form class="forget-form" action="index.html" method="post">
    <h3 class="font-green">
      <%= t "reset_pass.title" %>
    </h3>
    <p>
      <%= t "reset_pass.hint" %>
    </p>
    <div class="form-group">
      <input class="form-control placeholder-no-fix" type="text"
             autocomplete="off" placeholder="<%= t "reset_pass.email" %>" name="email"
        />
    </div>
    <div class="form-actions">
      <button type="button" id="back-btn" class="btn green btn-outline">
        <%= t "button.back" %>
      </button>
      <button type="submit" class="btn btn-success uppercase pull-right">
        <%= t "button.submit" %>
      </button>
    </div>
  </form>
  <!-- END FORGOT PASSWORD FORM -->
  <!-- BEGIN REGISTRATION FORM -->
  <form class="register-form" action="index.html" method="post">
    <h3 class="font-green">
      <%= t "signup.title" %>
    </h3>
    <p class="hint">
      <%= t "signup.enter_per_info" %>
    </p>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.name" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.name" %>" name="name"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.gender" %>
      </label>
      <select name="gender" class="form-control">
        <option value=""><%= t "signup.male" %></option>
        <option value="AF"><%= t "signup.female" %></option>
      </select>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.gender" %>
      </label>
      <div
        class="input-group date date-picker"
        data-date="12-02-2012"
        data-date-format="dd-mm-yyyy"
        data-date-viewmode="years"
        value="<%= t "signup.birthday" %>"
      >
        <input type="text" class="form-control" readonly=""/>
        <span class="input-group-btn">
          <button class="btn default btn-default--high" type="button">
            <i class="fa fa-calendar"></i>
          </button>
        </span>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.address" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.address" %>" name="address"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.company" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.company" %>" name="company"/>
    </div>
    <p class="hint">
      <%= t "signup.enter_acc_info" %>
    </p>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.email" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.email" %>" name="email"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.password" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.password" %>" name="password"/>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">
        <%= t "signup.password_confirm" %>
      </label>
      <input class="form-control placeholder-no-fix" type="text"
             placeholder="<%= t "signup.password_confirm" %>"/>
    </div>
    <div class="form-actions">
      <button
        type="button"
        id="register-back-btn"
        class="btn green btn-outline"
      >
        <%= t "button.back" %>
      </button>
      <button
        type="submit"
        id="register-submit-btn"
        class="btn btn-success uppercase pull-right"
      >
        <%= t "button.submit" %>
      </button>
    </div>
  </form>
  <!-- END REGISTRATION FORM -->
</div>
<div class="copyright">
  <%= Settings.dev_team %>
</div>
